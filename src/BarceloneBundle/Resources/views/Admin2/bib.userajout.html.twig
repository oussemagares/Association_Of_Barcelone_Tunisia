{% extends 'base.admin2.html.twig' %}

{% block body %}

<div class="container"  >
    {{ parent() }}

  <div class="row justify-content-md-center" style="margin-top:51px;" >
     
    
    <div class="col-6 ">
        {%  for flash_message in  app.session.flashbag.get('notice') %}
        <div class="alert alert-danger" role="alert" style="width: 172px;
        float: right;
        margin-right: -139px;">
              {{ flash_message }}
          </div>
      {% endfor %}

      {%  for flash_message in  app.session.flashbag.get('ajout') %}
      <div class="alert alert-primary" role="alert" style="width: 172px;
      float: right;
      margin-right: -139px;">
            {{ flash_message }}
        </div>
    {% endfor %}


     <h1 style="    margin-top: -28px;
     text-align: center;
     margin-bottom: 34px;">Ajouter Abonneé </h1>
          {{ form_start(form) }}
          {{form_row(form.email,{'attr':{'placeholder':"Email de abonné.. "}})}}
          {{form_row(form.username,{'attr':{'placeholder':"le nom du abonné.."}})}}
          {{form_row(form.password,{'attr':{'placeholder':"Son mots de passe "}})}}
          {{form_row(form.cin,{'attr':{'placeholder':"son cin"}})}}
          <div class="row justify-content-md-center">
            <button type="submit" class="btn btn-success" style="margin: 18px;">
             Ajouter   abonneé                      </button>
             </div>
             {{ form_end(form) }}
             
    
        {% endblock %}
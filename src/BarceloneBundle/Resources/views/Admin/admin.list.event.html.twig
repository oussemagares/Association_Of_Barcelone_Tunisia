{% extends 'base.admin.html.twig' %}

{% block body %}
    {{ parent() }}
 <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Tables des evenements </h1>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Tables</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>title</th>
                      <th>date_debut</th>
                      <th>date_fin</th>
                      <th>content </th>
                        <th>nbr_limit </th>
                      <th scope="col">Actions</th>

                    </tr>
                  </thead>
                  <tbody>
     {% for  events in event %}
                              <tr>
                                 
                                <td>{{events.title}}</td>
                                <td>{{events.DateDebut| date ('d/m/y')}}</td>
                                <td>{{events.DateFin| date ('d/m/y')}}</td>
                                <td>{{events.content}}</td>
                                  <td>{{events.NbrLimite}}</td>
                                <td>
                                        
                                              <a class="btn btn-danger" href="{{ path('suppevent', {'id': events.id})}}"  role="button">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                              </a>
                                                 
                                              <a class="btn btn-primary" href="{{ path('modevent', {'id': events.id})}}"  role="button" >
                                                <i class="fa fa-cog" aria-hidden="true"></i>
                                              </a>
                                </td>
                                
                              </tr>
       
                        {% endfor %}
                    </tbody>
                      </table>
              </div>
            </div>
          </div>

        </div>
    
        {% endblock %}
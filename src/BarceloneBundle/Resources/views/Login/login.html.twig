{% extends "base.html.twig" %}

{% block title %}BiblioBundle:Login:login{% endblock %}

{% block body %}
{{ parent() }}

<style>

.form-control {
  border-radius: 10rem;
}

</style>
<div class="container" style="margin-top: 49px;">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block " style="background-image: url({{ asset('images/barca2.png') }});background-position:center;
              background-repeat: no-repeat;
              background-size: 999px 553px;"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Bienvenu !</h1>
                  </div>
                   {% if error %}
         <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
     {% endif %}
     
                  <form class="user"  action="{{path('login')}}" method="POST" >
                    <div class="form-group">
                      <input type="text" class="form-control" id="exampleInputEmail1" required name="_username"  aria-describedby="emailHelp"  placeholder="Enter votre username ..">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" id="exampleInputPassword1"  required name="_password" placeholder="Votre Mots de passe">
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <input type="checkbox" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">Souvenir de moi</label>
                      </div>
                    </div>
                              <button type="submit" class="btn btn-success" style="width: 100%;
    background-color: #af1d4c;
    border-color: #af1d4c;border-radius: 10rem;
    padding: .75rem 1rem;
    font-size: .8rem;">
                                  Login
                              </button>
                    <hr>
                    <a href="index.html" class="btn btn-google btn-user btn-block">
                      <i class="fa fa-google-plus-square" aria-hidden="true"></i>
                      Login with Google
                    </a>
                    <a href="index.html" class="btn btn-facebook btn-user btn-block">
                      <i class="fa fa-facebook-square" aria-hidden="true"></i>
                                 Login with Facebook
                    </a>
                  </form>
                  <hr>
                  <div class="text-center">
                    <a class="small" href="forgot-password.html">Mots de passe oubli√© ?</a>
                  </div>
                  <div class="text-center">
                    <a class="small" href="{{path('register')}}">Inscription!</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
</div>

{% endblock %}